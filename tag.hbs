{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Main Tag content section}}
<main id="main" class="full-size-container">

	<section id="tag-author-page" class="content-column">

		<div class="tag-page-info">
			<h1 class="tag-title">
				<span class="tag-posts-count">
					{{plural pagination.total empty='No posts' singular='% post' plural='% posts'}} about
				</span>
				<br>
				<span class="tag-name">
				{{tag.name}}
				</span>
			</h1>

			{{#if tag.description}}
			<p class="tag-description">
				{{tag.description}}
			</p>
			{{/if}}

		</div>
	</section>

	<div class="content-column">

		{{> loop}}

		{{! Pagination links - displayed on every page}}
		{{pagination}}
	</div>
</main>
